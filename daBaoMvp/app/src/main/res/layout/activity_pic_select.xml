<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_pic_select"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:fitsSystemWindows="true"
    tools:context="cn.efarm360.com.dabaomvp.activity.picture.PicSelectActivity">
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="点击选择图片"
        android:id="@+id/btn_pic"
        />

    <RelativeLayout
        android:id="@+id/addquestion_imglist_layout"
        android:layout_width="match_parent"
        android:layout_height="60dip"
        android:paddingLeft="14dp"
        android:paddingRight="10dp"
       android:layout_below="@+id/btn_pic"
        >

        <ImageView
            android:id="@+id/addquestion_imglist_addimg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:src="@drawable/btn_add_img" />

        <HorizontalScrollView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_alignParentRight="true"
            android:layout_toRightOf="@id/addquestion_imglist_addimg"
            android:scrollbars="none" >

            <LinearLayout
                android:id="@+id/addquestion_imglist_view"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_gravity="center_vertical"
                android:gravity="center"
                android:orientation="horizontal" >
            </LinearLayout>
        </HorizontalScrollView>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/addquestion_img_layout"
        android:layout_height="60dip"
        android:layout_width="match_parent"
        android:paddingLeft="14dp"
        android:paddingRight="10dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="40dp"
         >

        <TextView
            android:id="@+id/addquestion_worktype_textss"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="添加图片图片" />

        <ImageView
            android:id="@+id/addquestion_chooseimg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/btn_add_img" />
    </RelativeLayout>
</RelativeLayout>
